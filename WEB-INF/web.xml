<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                                 http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
    <servlet>
		<servlet-name>ABB</servlet-name>
		<servlet-class>GetMails</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>BCC</servlet-name>
		<servlet-class>FeedbackForm</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>P1</servlet-name>
		<servlet-class>PurchaseMail1</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>P2</servlet-name>
		<servlet-class>PurchaseMail2</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>P3</servlet-name>
		<servlet-class>PurchaseMail3</servlet-class>
    </servlet>
    <servlet>
		<servlet-name>P4</servlet-name>
		<servlet-class>PurchaseMail4</servlet-class>
    </servlet>

    <servlet-mapping>
		<servlet-name>ABB</servlet-name>
		<url-pattern>/getMails.com</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>BCC</servlet-name>
		<url-pattern>/feedback.com</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>P1</servlet-name>
		<url-pattern>/purchase1.com</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>P2</servlet-name>
		<url-pattern>/purchase2.com</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>P3</servlet-name>
		<url-pattern>/purchase3.com</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>P4</servlet-name>
		<url-pattern>/purchase4.com</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>